#include <stdio.h>

int fibonacci(int n) {
    if (n <= 0) {
        printf("Numero invalido. Por favor, insira um nÃºmero positivo.\n");
        return -1; 
    } else if (n == 1) {
        return 0;
    } else if (n == 2) {
        return 1;
    } else {
        return fibonacci(n - 1) + fibonacci(n - 2);
    }
}

int main() {
    int n;
    printf("Digite o valor de n para calcular o n-esimo termo da sequencia de Fibonacci: ");
    scanf("%d", &n);

    int resultado = fibonacci(n);

    if (resultado != -1) {
        printf("O %d-esimo termo da sequencia de Fibonacci e: %d\n", n, resultado);
    }

    return 0;
}
